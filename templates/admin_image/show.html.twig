{% extends 'base-backend.html.twig' %}

{% block title %}Image{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Image</h1>
        <a href="{{ path('app_admin_image_index') }}"class="btn btn-dark btn-sm mb-2">Retour Ã  la liste</a>
    </div>

    <table class="table table-index table-striped table-response">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ image.id }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ image.imageName }}</td>
            </tr>
            <tr>
                <th>RankOrder</th>
                <td>{{ image.rankOrder }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ image.updatedAt ? image.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Tag</th>
                <td>{{ image.tag }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex m-3">
        <a href="{{ path('app_admin_image_edit', {'id': image.id}) }}" class="btn btn-warning btn-right"><i class="align-middle" data-feather="edit-2"></i></a>
        {{ include('admin_image/_delete_form.html.twig') }}
    </div>
{% endblock %}
