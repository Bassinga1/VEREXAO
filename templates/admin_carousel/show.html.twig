{% extends 'base-backend.html.twig' %}

{% block title %}Carousel{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Carousel</h1>
        <a href="{{ path('app_admin_carousel_index') }}" class="btn btn-dark btn-sm mb-2">Retour Ã  la liste</a>
    </div>
    <table class="table table-index table-striped table-response">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ carousel.id }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ carousel.imageName }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ carousel.texte }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ carousel.updatedAt ? carousel.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Tag</th>
                <td>{{ carousel.tag }}</td>
            </tr>
            <tr>
                <th>RankOrder</th>
                <td>{{ carousel.rankOrder }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ carousel.isActive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex m-3">
        <a href="{{ path('app_admin_carousel_edit', {'id': carousel.id}) }}" class="btn btn-warning btn-right"><i class="align-middle" data-feather="edit-2"></i></a>
        {{ include('admin_carousel/_delete_form.html.twig') }}
    </div>
{% endblock %}
