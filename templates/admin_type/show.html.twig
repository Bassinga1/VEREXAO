{% extends 'base-backend.html.twig' %}

{% block title %}Type{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Type</h1>
        <a href="{{ path('app_admin_type_index') }}" class="btn btn-dark btn-sm mb-2">Retour Ã  la liste</a>
    </div>

    <table class="table table-index table-striped table-response">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ type.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ type.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ type.slug }}</td>
            </tr>
            <tr>
                <th>Term</th>
                <td>{{ type.term }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ type.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ type.updatedAt ? type.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ type.imageName }}</td>
            </tr>
            <tr>
                <th>RankOrder</th>
                <td>{{ type.rankOrder }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex m-3">
    <a href="{{ path('app_admin_type_edit', {'id': type.id}) }}" class="btn btn-warning btn-right"><i class="align-middle" data-feather="edit-2"></i></a>
    {{ include('admin_type/_delete_form.html.twig') }}
    </div>

{% endblock %}
