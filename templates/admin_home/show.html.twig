{% extends 'base-backend.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center">
        <h1>Home</h1>
        <a href="{{ path('app_admin_home_index') }}" class="btn btn-dark btn-sm mb-2">Retour Ã  la liste</a>
    </div>
    <table class="table table-index table-striped table-response">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ home.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ home.titre }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ home.texte }}</td>
            </tr>
            <tr>
                <th>Signature</th>
                <td>{{ home.signature }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ home.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ home.imageName }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ home.updatedAt ? home.updatedAt|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex m-3">
        <a href="{{ path('app_admin_home_edit', {'id': home.id}) }}" class="btn btn-warning btn-right"><i class="align-middle" data-feather="edit-2"></i></a>
        {{ include('admin_home/_delete_form.html.twig') }}
    </div>
    
{% endblock %}
